.machine CommanderX16R40
.org $801

.byte $0C, $08, $0A, $00, $9E, $20, $32, $30, $36, $34, $00, $00, $00, $00, $00
.org $810
    
    sei    

    lda #02
    sta DC_BORDER

    stz CTRL
    lda #128
    sta DC_HSCALE 
    sta DC_VSCALE

    lda #$11        ; enable layer 0
    sta DC_VIDEO

    lda #$61
    sta L0_CONFIG ; 128x64 tiles, 2bpp

    lda #$10        ; map is at $02000
    sta L0_MAPBASE

    stz L0_TILEBASE ; 8x8, tiles are at $00000

    ; Tile definition
    lda #$10
    sta ADDRx_H
    lda #$00
    sta ADDRx_M
    lda #$00
    sta ADDRx_L

    ; Test Tile
    lda #$55
    sta DATA0
    sta DATA0
    sta DATA0
    sta DATA0
    sta DATA0
    sta DATA0
    sta DATA0
    sta DATA0
    sta DATA0
    sta DATA0
    sta DATA0
    sta DATA0
    sta DATA0
    sta DATA0
    sta DATA0
    sta DATA0
    
    ; Tile map details
    lda #$10
    sta ADDRx_H
    lda #$20
    sta ADDRx_M
    lda #$00
    sta ADDRx_L
    
    ; Fill page
    lda #$10
    jsr fill_line
    lda #$20
    jsr fill_line
    lda #$30
    jsr fill_line

    ldy #60-3
.line_clear:
    jsr blank_line
    dey
    bne line_clear


    ; set colour 1
    lda #$11
    sta ADDRx_H
    lda #$fa
    sta ADDRx_M
    lda #$02
    sta ADDRx_L

    lda #$12
    sta DATA0
    stz DATA0

    ; set colour 1+16
    lda #$11
    sta ADDRx_H
    lda #$fa
    sta ADDRx_M
    lda #$22
    sta ADDRx_L

    ; RED
    stz DATA0
    lda #$0F
    sta DATA0

    ; set colour 1+32
    lda #$11
    sta ADDRx_H
    lda #$fa
    sta ADDRx_M
    lda #$42
    sta ADDRx_L

    ; GREEN
    lda #$F0
    sta DATA0
    stz DATA0

    ; set colour 1+96
    lda #$11
    sta ADDRx_H
    lda #$fa
    sta ADDRx_M
    lda #$62
    sta ADDRx_L

    ; BLUE
    lda #$0F
    sta DATA0
    stz DATA0

    lda #$02
    sta IEN     ; line int

    lda #4
    sta IRQLINE_L


    lda ISR
    sta ISR

    ldx #01
.loop:
    lda #4
    sta IRQLINE_L

    wai     ; line 4, turn off layer 0

    nop
    nop
    nop
    nop
    nop
    nop

    lda #$01
    sta DC_VIDEO
    
    lda ISR
    sta ISR

    lda #15
    sta IRQLINE_L
    wai

    nop
    nop
    nop
    nop
    nop
    nop

    lda #$11
    sta DC_VIDEO ; turn layer 1 on.
    
    lda ISR
    sta ISR

    jmp loop
    

.proc fill_line
    ldx #128
.next_char:
    stz DATA0   ; tile index 0
    sta DATA0
    dex
    bne next_char
    rts
.endproc

.proc blank_line
    ldx #128
.next_char:
    stz DATA0 ; tile index 0
    stz DATA0
    dex
    bne next_char
    rts
.endproc